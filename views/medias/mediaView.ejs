<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
  	<h1>Spoilers for <%= media.title %>:</h1>

    <% if(spoilers.length > 0) { %>
      <ul>
        <% for(var i=0; i < spoilers.length; i++) { %>
          <li><%= spoilers[i].text %> - <a href="<%= media._id %>/spoiler/remove">Remover</a></li>
        <% } %>
      </ul>
    <% } else { %>
      <p><%= media.title %> has no spoilers :(</p>
    <% } %>

    <p>
      <a href="<%= media._id %>/spoiler">Click here</a> to add a spoiler for <%= media.title %>
    </p>
  </body>
</html>